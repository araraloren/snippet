package snippet:plugin@0.1.0;

interface plugin {
    enum plugin-kind {
        /// The plugin is a language plugin
        language,

        /// The plugin is a compiler plugin
        compiler,
    }

    /// The name of plugin, such as `clang` for a compiler plugin,
    /// or `rust` for a language plugin
    name: func() -> string;

    /// The kind of plugin
    kind: func() -> plugin-kind;
}